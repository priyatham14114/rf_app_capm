<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="_IddialogReset"
        resizable="false"
        draggable="true"
        contentWidth="20%"
        title="Reset Password"
    >
        <customHeader>
            <Bar id="_IDResetBar1">
                <contentMiddle>
                    <Title
                        id="_IDResetTitle1"
                        text="Create New Password"
                    />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idResetpasswordForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <HBox id="_IDresetGenHBox1">
                    <Input
                        id="idResetNewPassword"
                        value=""
                        placeholder="Enter New Password"
                        editable="true"
                        required="true"
                        type="Password"
                        width="150%"
                    />
                </HBox>
                <HBox id="_IDresetGenHBox2">
                    <Input
                        id="idresetConfirmPassword"
                        value=""
                        placeholder="Confirm Password"
                        editable="true"
                        required="true"
                        type="Password"
                        width="150%"
                    />
                </HBox>
            </form:SimpleForm>
        </content>
        <!-- Add button to the bottom right corner -->
        <endButton>
              <Button
                id="idCancelButton"
                text="Cancel"
                press="onCancelPress"
            />
        </endButton>
        <beginButton>
                  <Button
                id="idReturnLoginButton"
                text="Save"
                press="onSavePress"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>