<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="_IddialogForgot"
        resizable="false"
        draggable="true"
        contentWidth="15%"
        title="Reset Password"
    >
        <customHeader>
            <Bar id="_IDForgotBar1">
                <contentMiddle>
                    <Title
                        id="_IDforgotTitle1"
                        text="Create New Password"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="_IDDialogClose"
                        icon="sap-icon://decline"
                        press="onCloseFP"
                        tooltip="Close"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idforgotpasswordForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <HBox id="_IDGenHBox0">
                    <Button
                        id="lockedbtn0"
                        icon="sap-icon://call"
                        tooltip="Mobile No"
                        type="Transparent"
                    />
                    <HBox
                        id="_IDGenHBox3"
                        justifyContent="SpaceAround"
                    >
                        <Input
                            id="idEnterMobileNo"
                            value=""
                            placeholder="Enter Mobile No"
                            editable="true"
                            required="true"
                            width="100%"
                        />
                        <HBox id="_IDGenHBox4">
                            <Button
                                id="_IDConformationCode"
                                text="Get Code"
                                press="onSelectGetCode"
                            />
                        </HBox>
                    </HBox>
                </HBox>
                <HBox id="_IDGenHBox">
                    <Button
                        id="idConformcode"
                        icon="sap-icon://thing-type"
                        tooltip="Conformation Code"
                        type="Transparent"
                    />
                    <Input
                        id="idEnterConformationCode"
                        value=""
                        placeholder="Enter Code"
                        editable="true"
                        required="true"
                        width="100%"
                        liveChange="OnVerifyforgetOTP"
                    />
                    <core:Icon
                        id="verficationId1"
                        src="sap-icon://accept"
                        size="100%"
                        color="#008000"
                        visible="false"
                    />
                </HBox>
                <HBox id="_IDforgotGenHBox1">
                    <Button
                        id="lockedbtn1"
                        icon="sap-icon://locked"
                        tooltip="Locked"
                        type="Transparent"
                    />
                    <Input
                        id="idEnterNewPassword"
                        value=""
                        placeholder="Enter New Password"
                        editable="true"
                        required="true"
                        type="Password"
                        width="100%"
                    />
                </HBox>
                <HBox id="_IDGenHBox2">
                    <Button
                        id="lockedbtn2"
                        icon="sap-icon://locked"
                        tooltip="Locked"
                        type="Transparent"
                    />
                    <Input
                        id="idConfirmPassword"
                        value=""
                        placeholder="Confirm Password"
                        editable="true"
                        required="true"
                        type="Password"
                        width="100%"
                    />
                </HBox>
                <VBox
                    id="PasswordbuttonVBox"
                    class="sapUiSmallMarginTop"
                    alignItems="Center"
                >
                    <HBox
                        id="PasswordbuttonHBox"
                        justifyContent="Center"
                        alignItems="Center"
                        width="100%"
                    >
                        <Button
                            id="idforgotRegisterUserButton"
                            text="Reset Password"
                            press="onforgotpassword"
                        />
                    </HBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
