<mvc:View
    controllerName="com.app.rfapp.controller.ProductInspectionByStorageBin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ndc="sap.ndc"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
>
    <tnt:ToolPage id="idToolPagePIBSB">
        <tnt:header>
            <tnt:ToolHeader
                id="idtntToolHeaderPIBSB"
                class="ToolHeader"
            >
                <Image
                    id="_IDGenImage1PIBSB"
                    height="1.5rem"
                    class="sapUiSmallMarginBegin .Logo"
                    src="./Images/Artihcuslogo.png"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorPIBSB"
                />
                <ToolbarSpacer id="idToolbarSpacerPIBSB">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutData1PIBSB"
                            priority="NeverOverflow"
                            minWidth="20px"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <Avatar
                    id="_IDGenAvatar1PIBSB"
                    displaySize="XS"
                    press="onAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <ScrollContainer
                id="scrollContainerPIBSB1"
                vertical="true"
                horizontal="false"
                height="100%"
                width="100%"
                class="sapUiContentPadding"
            >
                <Button
                    id="_IDGenbackButtonPIBSB1"
                    icon="sap-icon://nav-back"
                    press="OnpressbackPIBSB1"
                    visible="true"
                    class="sapUiSmallMarginBottom"
                />
                <VBox
                    id="_IDGenVBoxpagePIBSB1"
                    alignItems="Center"
                    justifyContent="Center"
                    class="centerContent"
                >
                    <Title
                        id="idtitlebolPIBSB1"
                        text="Product Inspection By Storage Bin"
                        class="TitleSecondPage"
                        level="H1"
                    />
                    <form:SimpleForm
                        id="PIBSBsimpleForm"
                        layout="ResponsiveGridLayout"
                        editable="true"
                        class="sapUiResponsiveMargin"
                        labelSpanL="3"
                        labelSpanM="3"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsL="1"
                        columnsM="1"
                    >
                        <HBox
                            id="_IDGenHBoxContainerinpagePIBSB1"
                            alignItems="Center"
                        >
                            <Label
                                id="_IDPIBSBBinGenLabel"
                                text="Bin:"
                            />
                            <Input
                                id="_IDGenPIBSBBinInput"
                                placeholder="Enter Bin number"
                                class="sapUiTinyMarginBegin"
                                maxLength="4"
                            />
                            <Button
                                id="_IDGenPIBSBsubmitButton"
                                text="Submit"
                                press="OnpressPIBSBsubmit"
                                class="sapUiSmallMarginBegin"
                                type="Emphasized"
                            />
                        </HBox>
                    </form:SimpleForm>
                </VBox>
            </ScrollContainer>

            <ScrollContainer
                id="scrollContainerPIBSB2"
                vertical="true"
                horizontal="false"
                height="100%"
                width="100%"
                visible="false"
            >
                <Button
                    id="_IDGenbackButtonPIBSB2"
                    icon="sap-icon://nav-back"
                    press="OnpressbackbolPIBHU2"
                    visible="false"
                    class="sapUiSmallMarginBottom"
                />
                <VBox
                    id="_IDGenVBoxWithPIBSBBackButton"
                    alignItems="Center"
                    justifyContent="Center"
                    width="100%"
                    class="sapUiResponsiveMargin"
                >
                    <Title
                        id="idtitlebolPIBSB2"
                        class="TitleSecondPage"
                        level="H1"
                    />
                    <form:SimpleForm
                        id="PIBSBsimpleForm1"
                        layout="ResponsiveGridLayout"
                        editable="true"
                        columnsL="2"
                        columnsM="1"
                        class="sapUiResponsiveMargin"
                    >
                        <Label
                            id="_IDGenPIBSBLabel"
                            text="HU/Bin"
                            class="sapUiTinyMarginEnd"
                        />
                            <Input
                                id="_IDGenPIBSBhubininput"
                                maxLength="255"
                                width="200px"
                            />

                        <Label
                            id="_IDPIBSBProductGenLabel"
                            text="Product"
                        />
                        <Input
                            id="_IDPIBSBProductGenInput3"
                            maxLength="32"
                            width="200px"
                        />

                        <Label
                            id="_IDGenPIBSBLabelbatch"
                            text="Batch"
                            class="sapUiMarginTop margin"
                        />
                        <Input
                            id="_IDPIBSBbatchGenInput3"
                            maxLength="18"
                            width="200px"
                        />
                    </form:SimpleForm>
                </VBox>
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
