<mvc:View
    controllerName="com.app.rfapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage id="idPage">
        <tnt:header>
            <tnt:ToolHeader id="idtntToolHeaderLogin">
                <Image
                    id="_IDGenImageLogin"
                    height="1.5rem"
                    class="sapUiSmallMarginBegin"
                    src="https://artihcus.com/assets/img/AG-logo.png"
                />
                <tnt:ToolHeaderUtilitySeparator
                    id="idToolHeaderUtilitySeparatorLogin"
                />
                <ToolbarSpacer id="idToolbarSpacerLogin">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutDataLogin"
                            priority="NeverOverflow"
                            minWidth="2000%"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <ToolbarSpacer id="idToolbarSpacerLogin1">
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="idOverflowToolbarLayoutDataLogin1"
                            priority="NeverOverflow"
                            minWidth="2000%"
                        />
                    </layoutData>
                </ToolbarSpacer>
                <Avatar
                    id="_IDGenAvatarLogin"
                    displaySize="XS"
                    press="onAvatarPressed"
                    tooltip="Profile"
                />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:mainContents>
            <VBox
                id="idVBoxMain"
                justifyContent="Center"
                alignItems="Center"
                class="mainContainer"
            >
           
                <VBox
                    id="idVBoxLoginContainer"
                    class="loginContainer"
                    justifyContent="Center"
                    alignItems="Center"
                >
                <HBox  id="idHboxinlogin" alignContent="Start" >
                    <Image
                        id="idImageLogoAvatar11"
                        src="https://artihcus.com/assets/img/AG-logo.png"
                        class="sapUiSmallMarginEnd"
                        width="75%"
                        height="35%"
                    />
                    </HBox>
                    <Title
                        id="idTextParking"
                        text="LOGIN"
                        level="H2"
                    />
                    <Panel
                        id="idPanelLogin"
                        class="sapUiResponsiveMargin"
                        width="auto"
                    >
                        <content>
                            <Label
                                id="idLabelHU"
                                text="Warehouse Number:"
                                labelFor="idHUInput"
                                required="true"
                            />
                            <Input
                                id="idHUInput"
                                placeholder="Enter Warehouse Number..."
                                value="1710"
                                editable="false"
                            />
                            <Label
                                id="idLabelUserID"
                                text="Resource ID:"
                                labelFor="idUserIDInput"
                                class="sapUiSmallMarginTop"
                                required="true"
                            />
                            <Input
                                id="idUserIDInput"
                                placeholder="Enter Resource ID..."
                            />
                            <Label
                                id="idLabelPassword"
                                text="Password:"
                                labelFor="idPasswordInput"
                                class="sapUiSmallMarginTop"
                                required="true"
                            />
                            <Input
                                id="idPasswordInput"
                                type="Password"
                                placeholder="Enter Password..."
                            />
                            <HBox
                                id="idHBox"
                                class="sapUiSmallMarginTop"
                                justifyContent="End"
                            >
                                <Button
                                    id="idButtonLogin"
                                    text="Login"
                                    class="SubmitBtnFromVendorPage"
                                    press="onLoginPress"
                                />
                                <Button
                                    id="idButtonClear"
                                    text="Clear"
                                    class="ClearBtnFromVendorPage"
                                    press="onClearPress"
                                />
                            </HBox>
                        </content>
                    </Panel>
                    <HBox
                        id="idHBoxSignUpForgot"
                        justifyContent="Center"
                        alignItems="Center"
                        class="sapUiSmallMarginTop"
                    >
                        <CheckBox
                            id="idButtonSignUpcheckbox"
                            text="Auto Save"
                            class="onPressAutoSaveBtn"
                        />
                        <Button
                            id="idLinkPassword"
                            text="Forgot Password"
                            press="onForgotPassword"
                            class="onForgotPassword"
                            type="Transparent"
                        />
                    </HBox>
                    <HBox
                        id="idHBoxForgot"
                        justifyContent="Center"
                        alignItems="Center"
                        class="sapUiSmallMarginTop"
                    >
                        <Button
                            id="idButtonSignUp"
                            text="Create Resource"
                            press="onPressSignupBtn"
                            class="onSignupClassBtn"
                            type="Transparent"
                        />
                        <Button
                            id="idAddResource"
                            text="Add Resource To Library"
                            type="Transparent"
                        />
                    </HBox>
                </VBox>
            </VBox>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>