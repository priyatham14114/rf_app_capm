<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idconnectsapdialog"
        resizable="false"
        draggable="true"
        contentWidth="30%"
    >
        <customHeader>
            <Bar id="_IDBar1coonectsap">
                <contentMiddle>
                    <!-- Logo -->
                    <Image id="_IDGenImage"
                        src="https://artihcus.com/assets/img/AG-logo.png"
                        width="65px"
                        height="25px" 
                        class="sapUiSmallMarginEnd" 
                    />
                    <!-- Title -->
                    <Title
                        id="_IDTitleconnectsap"
                        text="CAPModel RF"
                        class="capModelRFText1"
                    />
                </contentMiddle>
                <contentRight>
                    <Button
                        id="_IDButton"
                        icon="sap-icon://decline"
                        press="onCloseconnectsap"
                        tooltip="Close"
        
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <form:SimpleForm
                id="idconnecttosapDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"  
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                emptySpanXL="1"
                emptySpanL="1"
                emptySpanM="1"
                emptySpanS="0"
                columnsXL="2"    
                columnsL="2"     
                columnsM="1"
            >
             <Title
                    id="idSimpleFormTitle"
                    text="System Connection Parameters" 
                    level="H2"
                    class="sapUiSmallMarginBottom"
                />
                <!-- Description -->
                <HBox id="hboxDescription">
                    <Label
                        id="idLableDescription"
                        text="Description:"
                        width="150px" 
                        class="sapUiTinyMarginTop"
                    />
                    <Input
                        id="idDescriptionInput"
                        value="{}"
                        placeholder="Enter Description..."
                        class="customInput"
                        width="200px" 
                    />
                </HBox>

                <!-- System Id -->
                <HBox id="hboxSystemId">
                    <Label
                        id="idLableSystemId"
                        text="System Id:"
                        width="150px" 
                        class="sapUiTinyMarginTop"
                        required="true"

                    />
                    <Input
                        id="idSystemIdInput"
                        value="{}"
                        placeholder="ID"
                        maxLength="3"
                        width="50px" 
                        liveChange="ongetSAPPress"
                        
                    />
                </HBox>

                <!-- Instance Number -->
                <HBox id="hboxInstanceNumber">
                    <Label
                        id="idLableInstanceNumber"
                        text="Instance Number:"
                        width="150px" 
                        class="sapUiTinyMarginTop"
                        required="true"

                    />
                    <Input
                        id="idInstanceNumberInput"
                        value="{}"
                        placeholder="Num"
                        maxLength="3"
                        width="50px" 
                    />
                </HBox>

                 <!-- Client -->
                <HBox id="hboxClient">
                    <Label
                        id="idLableClient"
                        text="Client:"
                        width="150px" 
                        class="sapUiTinyMarginTop"
                        required="true"

                    />
                    <Input
                        id="idClientInput"
                        value="{}"
                        placeholder="Client"
                        maxLength="3"
                        width="50px" 
                    />
                </HBox>

                <!-- Application server -->
                <HBox id="hboxApplicationServer">
                    <Label
                        id="idLableApplicationServer"
                        text="Application server:"
                        width="150px"
                        class="sapUiTinyMarginTop"
                        required="true"

                    />
                    <Input
                        id="idApplicationServerInput"
                        value="{}"
                        placeholder="Enter Application server..."
                        class="customInput"
                        width="200px" 
                        maxLength="200"
                    />
                </HBox>
                <HBox id="hboxRouterString">
                    <Label
                        id="idLableRouterString"
                        text="SAP Router String:"
                        width="150px" 
                        class="sapUiTinyMarginTop"

                    />
                    <Input
                        id="idRouterStringInput"
                        value="{}"
                        placeholder="Enter Router String..."
                        class="customInput"
                        width="200px" 
                    />
                </HBox>
                <!-- Service -->
                <HBox id="hboxService">
                    <Label
                        id="idLableService"
                        text="SAP Service:"
                        width="150px" 
                        class="sapUiTinyMarginTop"
                        required="true"

                    />
                    <Input
                        id="idServiceInput"
                        value="{}"
                        placeholder="Enter Service..."
                        class="customInput"
                        width="200px" 
                    />
                </HBox>
                
                <!-- Checkboxes for Description, System ID, and Client -->
               <HBox id="hboxCheckboxes" class='sapUiSmallMarginTop'>
                   <CheckBox
                       id='idCheckboxDescription'
                       text='Description as System ID/Client'
                   />
               </HBox>

            </form:SimpleForm>
        </content>
        <buttons>
         <Button
                id="idconnectsapcancelButton"
                text="Clear"
                press="onClearconnectSAPPress"
            />
         <Button
                id="idconnectsapeditButton"
                text="Edit"
                press="onEditconnectSAPPress"
                visible="false"
            />
            <Button
                id="idconnectsapbackButton"
                text="Back"
                press="onBackconnectSAPPress"
            />
            <Button
                id="idconnectsapfinishButton"
                text="Finish"
                press="onFinishconnectSAPPress"
            />
            <Button
                id="idhelpconnectsapButton"
                text="Help"
                press="onHelpconnectsapDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>